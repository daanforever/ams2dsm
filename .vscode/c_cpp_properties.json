{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/build/**"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "${workspaceFolder}/build"
                ]
            },
            "defines": [
                "__cpp_modules=1"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "intelliSenseMode": "linux-clang-x64",
            "compilerArgs": [
                "-std=c++20",
                "-Wall",
                "-Wextra"
            ],
            "cppStandard": "gnu++20",
            "configurationProvider": "ms-vscode.cmake-tools",
            "compileCommands": [
                "${workspaceFolder}/build/compile_commands.json"
            ],
            "mergeConfigurations": true
        }
    ],
    "version": 4
}